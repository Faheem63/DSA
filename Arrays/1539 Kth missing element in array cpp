#include <iostream>
using namespace std;

int main() 
{
  int n;
  cin >> n;
  
  int k;
  cin >> k;
  
  int arr[n];
  for(int i=0;i<n;i++){
    cin >> arr[i];
  }
  
  int ans=n;
  int start=0,end=n-1,mid;
  while(start<=end){
    mid=start+(end-start)/2;
    // Formula to count the total missing no.
    if(arr[mid]-mid-1 >= k){
      ans=mid;
      end=mid-1;
    }else{
      start=mid+1;
    }
  }
  cout << ans+k;
    return 0;
}
