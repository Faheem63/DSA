#include <iostream>
using namespace std;

int main() 
{
   int n;
   cin >> n;
   
   int arr[n];
   for(int i=0;i<n;i++){
     cin >> arr[i];
   }
   
   int start=0,end=n-1,mid;
// if array is not roated then return arr[0], ex - 1 2 3 4 5 
   int ans=arr[0];
   //if arr[mid]>=arr[0] arr left side sorted - move right
   while(start<=end){
     mid=start+(end-start);
     if(arr[mid]>=arr[0]){
       start=mid+1;
       
       //move left
     }else{
       ans=mid;
       end=mid-1;
     }
   }
   cout << ans;
    return 0;
}
