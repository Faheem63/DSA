#include <bits/stdc++.h>
using namespace std;

int main() 
{
  int n;
  cin >> n;
   vector<int>arr(n);
   for(int i=0;i<n;i++){
     cin >> arr[i];
   }
   
   //Time complexity - O(n^2)
  // int ans=INT_MIN;
  
  // for(int i=0;i<n-1;i++){
  //   for(int j=i+1;j<n;j++){
  //     ans=max(ans,arr[j]-arr[i]);
  //   }
  // }
  // cout << ans;
  
 int suffix[n];
 suffix[n-1]=arr[n-1];
 for(int i=n-2;i>=0;i--){
   suffix[i]=max(suffix[i+1],arr[i]);
 }
 int ans=INT_MIN;
 for(int i=0;i<n;i++){
   // Substract from last highest element;
   ans=max(ans,suffix[i+1]-arr[i]);
 }
 cout << ans;
    return 0;
}
